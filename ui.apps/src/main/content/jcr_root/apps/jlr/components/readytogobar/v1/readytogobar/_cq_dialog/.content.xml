<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Ready to go bar"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="jlr.component.rtgb.minmax">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <rtgbar
                        granite:class="minmax"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldDescription="Click 'add' to add a new accessibility Label and Link"
                        fieldLabel="Call To Action"
                        validation="minmax">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./rtgb">
                            <items jcr:primaryType="nt:unstructured">
                                <icon
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                    allowUpload="{Boolean}false"
                                    autoStart="{Boolean}false"
                                    class="cq-droptarget"
                                    fieldLabel="Icon"
                                    fileNameParameter="./fileName"
                                    fileReferenceParameter="./fileReference"
                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                    multiple="{Boolean}false"
                                    name="./icon"
                                    title="Upload Image Asset"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="{Boolean}true"/>
                                <imgAltText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="add this to specify about the icon added"
                                    fieldLabel="Image Alt Text"
                                    name="./imgAltText"/>
                                <text
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="the title about the link added"
                                    fieldLabel="Link Text"
                                    name="./text"/>
                                <link
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Link applied to rtgb elements. URL or path to a content page."
                                    fieldLabel="Link URL"
                                    name="./link"
                                    rootPath="/content/jlr"/>
                                <target
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    fieldDescription="Choose whether the page needs to be open in a new tab or same tab"
                                    fieldLabel="Target"
                                    name="target">
                                    <items jcr:primaryType="nt:unstructured">
                                        <blank
                                            jcr:primaryType="nt:unstructured"
                                            text="New tab"
                                            value="_blank"/>
                                        <self
                                            jcr:primaryType="nt:unstructured"
                                            text="Current Tab"
                                            value="_self"/>
                                    </items>
                                </target>
                                <description
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                    fieldDescription="Specify about the content regarding the title or the information"
                                    fieldLabel="Description (within 500 characters)"
                                    maxlength="500"
                                    name="./description"/>
                            </items>
                        </field>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            max-items="{Long}4"
                            min-items="{Long}4"/>
                    </rtgbar>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
