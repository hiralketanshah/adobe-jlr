<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Content Approval"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <approvereject
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Approve / Reject"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <approvalStatus
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                            class="cq-dialog-dropdown-showhide"
                                            cq-dialog-dropdown-showhide-target=".approve-reject-hide-show"
                                            fieldDescription="Select Approval status"
                                            fieldLabel="Choose Approve or Reject Content"
                                            name="./jcr:content/approvalStatus">
                                        <items jcr:primaryType="nt:unstructured">
                                            <approve
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Approve"
                                                    value="approve"/>
                                            <reject
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Reject"
                                                    value="reject"/>
                                        </items>
                                    </approvalStatus>
                                    <approve
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container"
                                            class="hide approve-reject-hide-show"
                                            showhidetargetvalue="approve">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <activateNowLater
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                                            class="cq-dialog-dropdown-showhide"
                                                            cq-dialog-dropdown-showhide-target=".date-hide-show"
                                                            text="Activate Now/Later"
                                                            title="Activate Now/Later"
                                                            name="./jcr:content/activateNowLater"
                                                            vertical="{Boolean}false">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <activateNow
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                    text="Activate Now"
                                                                    value="activateNow"/>
                                                            <activateLater
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                    text="Activate Later"
                                                                    value="activateLater"/>
                                                            <doNothing
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                    text="Do Nothing"
                                                                    value="doNothing"/>
                                                        </items>
                                                    </activateNowLater>
                                                    <activationDate
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/container"
                                                            class="hide date-hide-show"
                                                            showhidetargetvalue="activateLater">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <well
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/well">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <date
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                                            displayedFormat="DD/MM/YYYY HH:mm"
                                                                            fieldDescription="The content publishing date to be displayed"
                                                                            fieldLabel="Activation Date"
                                                                            name="./jcr:content/activationDate"
                                                                            type="datetime"/>
                                                                </items>
                                                            </well>
                                                        </items>
                                                        <granite:data
                                                                jcr:primaryType="nt:unstructured"
                                                                content-approval-component="true"/>
                                                    </activationDate>
                                                </items>
                                            </well>
                                        </items>
                                        <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                content-approval-component="true"/>
                                    </approve>
                                </items>
                            </approvereject>

                            <embargoLiftDate
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <date
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                    displayedFormat="DD/MM/YYYY"
                                                    fieldDescription="The embargo lift date to be displayed"
                                                    fieldLabel="Embargo lift date"
                                                    name="./jcr:content/embargoLiftDate"
                                                    type="datetime"/>
                                        </items>
                                    </well>
                                </items>
                            </embargoLiftDate>
                            <contentPublishingDate
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <date
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                    displayedFormat="DD/MM/YYYY"
                                                    fieldDescription="The content publishing date to be displayed"
                                                    fieldLabel="Content publishing date"
                                                    name="./jcr:content/contentPublishingDate"
                                                    type="datetime"/>
                                        </items>
                                    </well>
                                </items>
                            </contentPublishingDate>
                        </items>
                    </general>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
