<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Gallery Categories"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <headerCopy
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                dfs-required="true"
                                fieldDescription="The Header copy to be displayed."
                                fieldLabel="Header Copy"
                                name="./headerCopy"
                                required="{Boolean}true"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <subsuperscript
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="*">
                                        <specialCharsConfig jcr:primaryType="nt:unstructured">
                                            <chars jcr:primaryType="nt:unstructured">
                                                <non-breaking-space
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;nbsp;"
                                                    name="Non-breaking space"/>
                                                <non-breaking-hyphen
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;#8209"
                                                    name="Non-breaking hyphen"/>
                                            </chars>
                                        </specialCharsConfig>
                                    </misctools>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                        <dialogFullScreen
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                    </cui>
                                </uiSettings>
                            </headerCopy>
                            <infoCopy
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                dfs-required="true"
                                fieldDescription="The Information copy to be displayed."
                                fieldLabel="Information Copy"
                                name="./copy"
                                required="{Boolean}true"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <subsuperscript
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="*">
                                        <specialCharsConfig jcr:primaryType="nt:unstructured">
                                            <chars jcr:primaryType="nt:unstructured">
                                                <non-breaking-space
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;nbsp;"
                                                    name="Non-breaking space"/>
                                                <non-breaking-hyphen
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;#8209"
                                                    name="Non-breaking hyphen"/>
                                            </chars>
                                        </specialCharsConfig>
                                    </misctools>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                        <dialogFullScreen
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                    </cui>
                                </uiSettings>
                            </infoCopy>
                            <exitLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Link to page when gallery is closed"
                                fieldLabel="Link to exit page"
                                name="./exitPageLink"
                                rootPath="/content/landrover/global"/>
                        </items>
                    </properties>
                    <categories
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Thumbnail Images"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <thumbnails
                                granite:class="minmax"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Category thumbnails"
                                validation="minmax">
                                <field
                                    granite:class="horizontal-line"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./categoryList">
                                    <items jcr:primaryType="nt:unstructured">
                                        <well
                                            granite:class="grey-border"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                            <items jcr:primaryType="nt:unstructured">
                                                <bgImage
                                                    granite:class="img-path"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    allowUpload="{Boolean}false"
                                                    fieldDescription="Background Image for the category"
                                                    fieldLabel="Background Image"
                                                    fileReferenceParameter="./bgImage"
                                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                    multiple="{Boolean}false"
                                                    name="./bgImg"/>
                                                <imgAlt
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                                    path="/mnt/overlay/jlr/components/globalfields/image/imageAlt"/>
                                                <decorative
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                                    path="/mnt/overlay/jlr/components/globalfields/image/decorative"/>
                                                <text
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/text"
                                                    text="Gallery link path*"/>
                                                <categoryLink
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                                    path="/mnt/overlay/jlr/components/globalfields/cta/link"/>
                                                <categoryName
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                    dfs-required="true"
                                                    fieldDescription="The Category name to be displayed."
                                                    fieldLabel="Category Name"
                                                    name="./categoryName"
                                                    required="{Boolean}true"
                                                    useFixedInlineToolbar="{Boolean}true">
                                                    <rtePlugins jcr:primaryType="nt:unstructured">
                                                        <subsuperscript
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*"/>
                                                        <misctools
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*">
                                                            <specialCharsConfig jcr:primaryType="nt:unstructured">
                                                                <chars jcr:primaryType="nt:unstructured">
                                                                    <non-breaking-space
                                                                        jcr:primaryType="nt:unstructured"
                                                                        entity="&amp;nbsp;"
                                                                        name="Non-breaking space"/>
                                                                    <non-breaking-hyphen
                                                                        jcr:primaryType="nt:unstructured"
                                                                        entity="&amp;#8209"
                                                                        name="Non-breaking hyphen"/>
                                                                </chars>
                                                            </specialCharsConfig>
                                                        </misctools>
                                                    </rtePlugins>
                                                    <uiSettings jcr:primaryType="nt:unstructured">
                                                        <cui jcr:primaryType="nt:unstructured">
                                                            <inline
                                                                jcr:primaryType="nt:unstructured"
                                                                toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                                            <dialogFullScreen
                                                                jcr:primaryType="nt:unstructured"
                                                                toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                                        </cui>
                                                    </uiSettings>
                                                </categoryName>
                                            </items>
                                        </well>
                                    </items>
                                </field>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    maxlimit="4"
                                    min-items="{Long}2"/>
                            </thumbnails>
                        </items>
                    </categories>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
