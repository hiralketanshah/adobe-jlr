<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Quote"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <id
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/mnt/overlay/jlr/components/globalfields/general/id"/>
                            <quote
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Specify the quote /header text."
                                fieldLabel="Header / Quote"
                                name="./quote"
                                required="true"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <subsuperscript
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="*">
                                        <specialCharsConfig jcr:primaryType="nt:unstructured">
                                            <chars jcr:primaryType="nt:unstructured">
                                                <non-breaking-space
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;nbsp;"
                                                    name="Non-breaking space"/>
                                                <non-breaking-hyphen
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;#8209"
                                                    name="Non-breaking hyphen"/>
                                            </chars>
                                        </specialCharsConfig>
                                    </misctools>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                        <dialogFullScreen
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                    </cui>
                                </uiSettings>
                            </quote>
                            <name
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Specify the name of the individual who said the quote."
                                fieldLabel="Name"
                                name="./quoteAuthorName"
                                required="true"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <subsuperscript
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="*">
                                        <specialCharsConfig jcr:primaryType="nt:unstructured">
                                            <chars jcr:primaryType="nt:unstructured">
                                                <non-breaking-space
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;nbsp;"
                                                    name="Non-breaking space"/>
                                                <non-breaking-hyphen
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;#8209"
                                                    name="Non-breaking hyphen"/>
                                            </chars>
                                        </specialCharsConfig>
                                    </misctools>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                        <dialogFullScreen
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                    </cui>
                                </uiSettings>
                            </name>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Specify the title of the individual who said the quote."
                                fieldLabel="Name"
                                name="./quoteTitleName"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <subsuperscript
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="*">
                                        <specialCharsConfig jcr:primaryType="nt:unstructured">
                                            <chars jcr:primaryType="nt:unstructured">
                                                <non-breaking-space
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;nbsp;"
                                                    name="Non-breaking space"/>
                                                <non-breaking-hyphen
                                                    jcr:primaryType="nt:unstructured"
                                                    entity="&amp;#8209"
                                                    name="Non-breaking hyphen"/>
                                            </chars>
                                        </specialCharsConfig>
                                    </misctools>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                        <dialogFullScreen
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[subsuperscript#subscript,subsuperscript#superscript,misctools#specialchars]"/>
                                    </cui>
                                </uiSettings>
                            </title>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
