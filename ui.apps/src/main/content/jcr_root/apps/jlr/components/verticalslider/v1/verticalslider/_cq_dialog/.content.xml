<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Vertical Slider"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-contentfragmentlist__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <slider
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Slider Item"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <sliderItem
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Vertical Slider Item">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    fieldDescription="Maximum 4 Items are allowed"
                                    name="./verticalSliderList">
                                    <items jcr:primaryType="nt:unstructured">
                                        <rte1heading
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/text"
                                            text="Header Copy"/>
                                        <header
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                            path="/mnt/overlay/jlr/components/globalfields/general/rte1"/>
                                        <rte2heading
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/text"
                                            text="Summary"/>
                                        <summary
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                            path="/mnt/overlay/jlr/components/globalfields/general/rte2"/>
                                        <imagePathHeading
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/text"
                                            text="Image"/>
                                        <imagePath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                            path="/mnt/overlay/jlr/components/globalfields/image/imagePath"/>
                                        <decorative
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                            path="/mnt/overlay/jlr/components/globalfields/image/decorative"/>
                                        <imgAlt
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                            path="/mnt/overlay/jlr/components/globalfields/image/imageAlt"/>
                                        <damAltText
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                            path="/mnt/overlay/jlr/components/globalfields/image/damAltText"/>
                                        <ctaList
                                            granite:class="horizontal-line"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                            composite="{Boolean}true"
                                            fieldDescription="Maximum 1 CTAs are allowed"
                                            fieldLabel="CTA List">
                                            <field
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                                name="./ctaList">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <column
                                                        granite:class="horizontal-line-dotted"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <linkText
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                path="/mnt/overlay/jlr/components/globalfields/cta/text"/>
                                                            <link
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                path="/mnt/overlay/jlr/components/globalfields/cta/link"/>
                                                            <target
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                path="/mnt/overlay/jlr/components/globalfields/cta/targetTab"/>
                                                            <linkType
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                path="/mnt/overlay/jlr/components/globalfields/cta/linkType"/>
                                                            <icon
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                path="/mnt/overlay/jlr/components/globalfields/cta/icon"/>
                                                            <ariaLabel
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                path="/mnt/overlay/jlr/components/globalfields/cta/ariaLabel"/>
                                                        </items>
                                                    </column>
                                                </items>
                                            </field>
                                            <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                maxlimit="1"/>
                                        </ctaList>
                                    </items>
                                </field>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    maxlimit="4"
                                    min-items="{Long}4"
                                    vertical-slider-component="true"/>
                            </sliderItem>
                        </items>
                    </slider>
                    <carousel
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Carousel Behavior"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <autoplayGroup
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <delay
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                fieldDescription="The delay (in milliseconds) before automatically transitioning to the next slide."
                                                fieldLabel="Transition Delay (milliseconds)"
                                                required="true"
                                                max="60000"
                                                min="0"
                                                name="./delay"
                                                step="100"
                                                value="1000"/>
                                            <autopauseDisabled
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="false"
                                                fieldDescription="If checked, display play pause buttons."
                                                name="./autopauseDisabled"
                                                text="Disable play pause options"
                                                uncheckedValue="false"
                                                value="true"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cmp-carousel-v1-dialog-hook="autoplayGroup"/>
                                    </autoplayGroup>
                                </items>
                            </columns>
                        </items>
                    </carousel>
                    <copy
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <id
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                        path="/mnt/overlay/jlr/components/globalfields/general/id"/>
                                    <pipIcon
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        checked="true"
                                        fieldDescription="Disable numbered items and change to pip icon"
                                        name="./pipIcon"
                                        text="Choose pip icon instead of numbers"
                                        uncheckedValue="false"
                                        value="true"/>
                                </items>
                            </column>
                        </items>
                    </copy>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
