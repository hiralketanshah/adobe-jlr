<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Market Selector"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <marketproperties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Market Selector Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <markets
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldLabel="Markets">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./markets">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <marketName
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Specify the name of the market or country"
                                                            fieldLabel="Market Name"
                                                            name="./marketName"/>
                                                        <marketFlag
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldDescription="Specify the icon for the market or country flag"
                                                            fieldLabel="Market Flag"
                                                            name="./marketFlag"/>
                                                        <region
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                            allowBulkEdit="{Boolean}true"
                                                            autocreateTag="{Boolean}true"
                                                            fieldDescription="Specify the region in an market."
                                                            fieldLabel="Region"
                                                            multiple="{Boolean}true"
                                                            name="./region">
                                                            <granite:data
                                                                jcr:primaryType="nt:unstructured"
                                                                cq-msm-lockable="region"/>
                                                        </region>
                                                        <languages
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                            composite="{Boolean}true"
                                                            fieldLabel="Languages">
                                                            <field
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                name="./languages">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <languageTitle
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldDescription="Specify the Language of the market"
                                                                        fieldLabel="Language Title"
                                                                        name="./languageTitle"/>
                                                                    <link
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                        path="/mnt/overlay/jlr/components/globalfields/cta/link"/>
                                                                    <target
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                        path="/mnt/overlay/jlr/components/globalfields/cta/targetTab"/>
                                                                </items>
                                                            </field>
                                                        </languages>
                                                    </items>
                                                </field>
                                            </markets>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </marketproperties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
