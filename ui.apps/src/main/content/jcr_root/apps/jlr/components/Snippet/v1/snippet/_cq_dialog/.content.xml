<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Snippet dialog "
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="A title to display as the headline for the snippet."
                        fieldLabel="Title"
                        name="./title"/>
                    <description
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                        fieldDescription="A description to display as the subheadline for the snippet."
                        fieldLabel="Description (within 500 characters)"
                        maxlength="500"
                        name="./description"/>
                    <calltoaction
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldDescription="Click 'add' to add a new accessibility Label and Link"
                        fieldLabel="Call To Action">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./ctaList">
                            <items jcr:primaryType="nt:unstructured">
                                <linkText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Link Text"
                                    name="./text"/>
                                <linkUrl
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Link applied to snippet elements. URL or path to a content page."
                                    fieldLabel="Link URL"
                                    name="./link"
                                    rootPath="/content/jlr"/>
                                <target
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    fieldDescription="Choose whether the page needs to be open in a new tab or same tab"
                                    fieldLabel="Target"
                                    name="target">
                                    <items jcr:primaryType="nt:unstructured">
                                        <blank
                                            jcr:primaryType="nt:unstructured"
                                            text="Open in new tab"
                                            value="_blank"/>
                                        <self
                                            jcr:primaryType="nt:unstructured"
                                            text="Open in same tab"
                                            value="_self"/>
                                    </items>
                                </target>
                            </items>
                        </field>
                    </calltoaction>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
