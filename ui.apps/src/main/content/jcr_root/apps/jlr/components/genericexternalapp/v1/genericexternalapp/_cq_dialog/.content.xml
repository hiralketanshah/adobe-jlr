<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Generic External Application"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <containerId
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="HTML ID attribute to apply to the component."
                                fieldLabel="Container ID"
                                name="./containerId"
                                required="{Boolean}true"/>
                            <script
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Link to a content page, external URL or page anchor."
                                fieldLabel="Script URL"
                                name="./scriptURL"
                                rootPath="/content"/>
                            <scriptParam
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Script Parameters">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                    name="./scriptParam">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <keyParam
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="The text to be rendered on the CTA"
                                                    fieldLabel="Key"
                                                    name="./keyParam"/>
                                                <valueParam
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="The text to be rendered on the CTA"
                                                    fieldLabel="Value"
                                                    name="./valueParam"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </scriptParam>
                            <consentCategory
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <inputgroup
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        text="Consent Categories"/>
                                    <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <analysis
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="true"
                                                name="./consentCategory"
                                                text="Analysis"
                                                value="analysis"/>
                                            <marketing
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="true"
                                                name="./consentCategory"
                                                text="Marketing"
                                                value="marketing"/>
                                            <functional
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="true"
                                                name="./consentCategory"
                                                text="Functional"
                                                value="functional"/>
                                        </items>
                                    </field>
                                </items>
                            </consentCategory>
                            <header
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="The Body copy to be displayed."
                                fieldLabel="Unconsented Header"
                                name="./unconsentedHeader"/>
                            <message
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldDescription="The Body copy to be displayed."
                                fieldLabel="Unconsented Message Text"
                                name="./unconsentedMessage"/>
                            <ctaText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="The text to be rendered on the CTA"
                                fieldLabel="CTA Text"
                                name="./ctaText"/>
                            <ctaLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Link to a content page, external URL or page anchor."
                                fieldLabel="CTA Link"
                                name="./ctaLink"
                                rootPath="/content/landrover"/>
                            <targetTab
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Target for the link authored - current tab or same tab"
                                fieldLabel="CTA Target"
                                name="./target">
                                <items jcr:primaryType="nt:unstructured">
                                    <current
                                        jcr:primaryType="nt:unstructured"
                                        selected="{Boolean}true"
                                        text="Current tab"
                                        value="_self"/>
                                    <new
                                        jcr:primaryType="nt:unstructured"
                                        text="New tab"
                                        value="_blank"/>
                                </items>
                            </targetTab>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
